@using PhotoContest.Common.Helpers
@model PhotoContest.Web.InputModels.ContestInputModel

@{
    ViewBag.Title = "Create";

}

<h1>Create</h1>

@using (Html.BeginForm("Create", "Contests", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.LabelFor(c => c.Title)
    @Html.EditorFor(c => c.Title)
    <br/>

    @Html.LabelFor(c => c.Description)
    @Html.EditorFor(c => c.Description)
    <br/>

    @Html.LabelFor(c => c.RewardStrategy)
    @Html.EnumDropDownListFor(c => c.RewardStrategy)
    <br/>

    @Html.DisplayNameFor(c => c.Type)
    @Html.EnumDropDownListFor(c => c.Type)
    <br/>

    @Html.DisplayNameFor(c => c.VotingStrategy)
    @Html.EnumDropDownListFor(c => c.VotingStrategy)
    <br/>

    @Html.DisplayNameFor(c => c.DeadlineStrategy)
    @Html.EnumDropDownListFor(c=> c.DeadlineStrategy)
    
    @Html.Submit(new { @class = "btn btn-primary", value = "Create" });
}
