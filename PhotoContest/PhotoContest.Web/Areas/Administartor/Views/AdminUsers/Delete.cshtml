@model PhotoContest.Web.ViewModels.UserViewModel
@using PhotoContest.Common.Helpers

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>

<div class="well">
    <span class="venue-info">@Html.DisplayFor(modelItem => Model.UserName)</span>
</div>

@using (Html.BeginForm("Delete", "AdminUsers"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.UserName)
    <div class="form-actions no-color">
        @Html.Submit(new { @class = "btn btn-danger", value = "Delete" })
    </div>
}

